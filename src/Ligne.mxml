<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" xmlns:local="*"
		 creationComplete="init()">

	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
			import mx.controls.Alert;
			
			private var cells:ArrayList = new ArrayList();
			
			public function init():void
			{
				for (var i:int = 0; i < Table.getNbCol(); i++) {
					addCell();
				}
			}
			
			public function addCell():void
			{		
				var cell:Cell = new Cell();
				addElement(cell);
				cells.addItem(cell);
			}
			
			protected function reduceRow_clickHandler(event:MouseEvent):void
			{
				if (event.target.selected){
					for each (var cell:Cell in cells.source) {
						cell.reduce();
					}
					button.label = "+";
				} else{
					for each (var cell:Cell in cells.source) {
						cell.expand();
					}
					button.label = "-";
				}
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:HorizontalLayout gap="0" />
	</s:layout>
	
	<s:ToggleButton id="button" label="-" click="reduceRow_clickHandler(event)" />
</s:Group>
